int main() 
{
    int day;
    cout<<"Enter number of day = ";
    cin>>day;
    switch (day)
    {
        case 1:
        cout<<"Monday";
        case 2:
        cout<<"Monday";
        case 3:
        cout<<"Monday";
        case 4:
        cout<<"Monday";
        case 5:
        cout<<"Monday";
        case 6:
        cout<<"Monday";
        case 7:
        cout<<"Monday";
        break;
        default:
        cout<<"Incorrect Value";
    }
}
